echo ""

read -p "Enter your choice [1-11]: " panel_choice

case $panel_choice in
1) echo "Installing FeatherPanel..." ;;
2) bash <(curl -s https://pterodactyl-installer.se) ;;
3) echo "Installing Jexactyl..." ;;
4) echo "Installing JexPanel..." ;;
5) echo "Installing MythicalDash..." ;;
6) echo "Installing MythicalDash v3..." ;;
7) echo "Installing Payment Gateway..." ;;
8) echo "Installing CtrlPanel..." ;;
9) echo "Installing Reviacly..." ;;
10) echo "Installing Extra Tools..." ;;
11) break ;;
*) echo "Invalid option!" ; sleep 2 ;;
esac

pause
done
}

